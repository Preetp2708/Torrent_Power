<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- big corner radius makes it pill/oval-like -->
    <corners android:radius="40dp"/>
    <solid android:color="#fbc490"/>        <!-- background color -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp"/>
    <size android:height="56dp"/>          <!-- optional fixed height -->
</shape>
