<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Header Bar -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Torrent Power - Bill Payment"
        android:background="@drawable/bg_oval_simple"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="#FFFFFF"/>

    <!-- Bill Details Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:background="#FFF3E0"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvCustomerNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer No: 123456789"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Amount: â‚¹1250"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32" />
    </LinearLayout>

    <!-- Payment Options -->
    <TextView
        android:id="@+id/tvPaymentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Payment Mode"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#E53935"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp" />

    <RadioGroup
        android:id="@+id/radioGroupPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioPaytm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paytm"
            android:textSize="16sp"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radioCreditCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Card"
            android:textSize="16sp"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radioDebitCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debit Card"
            android:textSize="16sp"
            android:textColor="#000000" />
    </RadioGroup>

    <!-- Proceed Button -->
    <Button
        android:id="@+id/btnProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed to Pay"
        android:layout_marginTop="30dp"
        android:backgroundTint="#1EB2F6"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="12dp"
        android:fontFamily="sans-serif-medium" />
    <Button
        android:id="@+id/btnBackPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="15dp"
        android:backgroundTint="#E53935"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


</LinearLayout>

